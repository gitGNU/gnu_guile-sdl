## am/common --- frags useful in many Makefile.am files

## vars significant to automake

cmoddir = $(GUILE_LIBSITE)/sdl

AM_CPPFLAGS = -I$(srcdir) -I$(top_srcdir)/include

SUFFIXES = .c

DISTCLEANFILES =

noinst_DATA =

SOFIXFLAGS = no-la,no-symlinks

do-sofix:
	$(top_srcdir)/am/sofix $(SOFIXFLAGS) \
	  $(DESTDIR)$(cmoddir) $(cmod_LTLIBRARIES)

## Local variables:
## mode: makefile
## End:

## am/common ends here
